{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": ["jest", "@testing-library/jest-dom", "vite/client"],
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*", // Include all your source files
    "**/*.d.ts", // Include type declaration files
    "globals.css" // Ensure CSS files are included
  ],
}
